# Docker Environment Configuration
# Copy this to .env and fill in your values

APP_NAME="News Aggregator"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_PORT=8000

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=news_aggregator
DB_USERNAME=news_user
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache & Queue
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# News API Keys (Get from respective providers)
NEWSAPI_KEY=
GUARDIAN_API_KEY=
NYTIMES_API_KEY=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
